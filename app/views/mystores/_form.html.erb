<%= simple_form_for @item, :html => {:multipart => true } do |f| %>
    <%= select_tag(:category_id, options_for_select(@categories), :prompt => "Selecet a category") %>
    <%= f.file_field :item_img %>
    <%= f.input :title, label: "Назва товару" %>
    <%= f.input :description, label: "Опис" %>
    <%= f.input :price, label: "Ціна"  %>
    <%= f.submit%>
<% end %>
